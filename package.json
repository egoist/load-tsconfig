{
  "name": "load-tsconfig",
  "version": "0.1.1",
  "description": "Load tsconfig.json",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs --target node14",
    "build": "pnpm build-fast -- --dts-resolve",
    "test": "vitest run",
    "prepublishOnly": "pnpm build"
  },
  "license": "MIT",
  "devDependencies": {
    "@egoist/prettier-config": "1.0.0",
    "@types/node": "14.18.9",
    "kanpai": "0.10.1",
    "prettier": "2.5.1",
    "strip-json-comments": "4.0.0",
    "tsup": "5.11.11",
    "typescript": "4.5.5",
    "vitest": "0.2.3"
  },
  "engines": {
    "node": ">=14"
  }
}
